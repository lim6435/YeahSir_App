<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="font_default" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="font_large_2" parent="font_default">
        <item name="android:textSize">@dimen/font_size_large_2</item>
    </style>

    <style name="font_large_1" parent="font_default">
        <item name="android:textSize">@dimen/font_size_large_1</item>
    </style>

    <style name="font_small" parent="font_default">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="button_default">
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:textColor">@color/buttonTextPrimary</item>
    </style>

    <style name="button_light">
        <item name="android:background">@drawable/button_light</item>
        <item name="android:textColor">@color/buttonTextPrimary</item>
    </style>

    <style name="line_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="line_primary_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimaryLight2</item>
    </style>

    <style name="line_accent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

</resources>
